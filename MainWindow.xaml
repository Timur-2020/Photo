<Window x:Class="Photo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Photo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label>Логин:</Label>
                <TextBox x:Name="Login" Width="120" Margin="6"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Пароль:</Label>
                <PasswordBox x:Name="Password" Width="120" Margin="6"></PasswordBox>
            </StackPanel>

            <Button Click="LoginButton">Войти</Button>
        </StackPanel>
    </Grid>
</Window>
